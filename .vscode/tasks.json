{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdocs serve",
            "type": "shell",
            "command": "source ../.venv/bin/activate && watchmedo auto-restart --directory=../kny_mkdocs --recursive --patterns=\"*.py\" --debug-force-polling --interval=1 --debounce-interval=10 -- mkdocs serve --dev-addr=0.0.0.0:8000",
            "options": {
                "cwd": "${workspaceFolder}/docs_example/"
            },
        },
    ]
}
