{
	"name": "Kenyoni MkDocs Plugin",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/kny-mkdocs",
	"remoteUser": "vscode",
	"containerUser": "vscode",
	"portsAttributes": {
		"8000": {
			"label": "mkdocs preview",
			"onAutoForward": "notify"
		}
	},
	"forwardPorts": [
		8000
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"Tyriar.sort-lines",
				"charliermarsh.ruff",
				"ms-python.python",
			]
		}
	},
	"postCreateCommand": {
		"create python env": "python -m venv .venv && pip install uv watchdog && uv sync",
	}
}